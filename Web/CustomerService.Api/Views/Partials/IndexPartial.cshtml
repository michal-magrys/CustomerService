@model CustomerService.Api.ViewModels.CustomersViewModel

<div class="uk-width-1-2 uk-container uk-margin-small-top">
    <p class="uk-margin-small-bottom">Number of customers: @Model.Customers.Count()</p>
    <dl class="uk-description-list uk-description-list-divider">
        @foreach (var customer in Model.Customers)
        {
            <dt class="">@customer.Name @customer.Surname</dt>
            <dd>
                <div class="uk-flex uk-container-center">
                    <div class="uk-width-2-3">
                        @customer.Surname
                        @customer.Address
                    </div>
                    <div class="uk-width-1-3">
                        <ul class="uk-iconnav">
                            <li><a href="Edit" uk-icon="icon: file-edit" uk-tooltip="Edit customer"></a></li>
                            <li><button id="remove-modal-confirm" customer-id="@customer.Id" uk-icon="icon: trash" uk-tooltip="Remove customer"></button></li>
                        </ul>
                    </div>
                </div>
            </dd>
        }
    </dl>
</div>