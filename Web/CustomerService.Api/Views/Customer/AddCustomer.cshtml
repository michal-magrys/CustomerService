@model CustomerService.Api.ViewModels.AddCustomerViewModel
@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Add" method="post">
    <fieldset class="uk-fieldset">
        <div class="uk-margin">
            <label class="uk-form-label" for="form-stacked-select">Name</label>
            <input class="uk-input" type="text" name="Name">
        </div>

        <div class="uk-margin">
            <label class="uk-form-label" for="form-stacked-select">Surname</label>
            <input class="uk-input" type="text" name="Surname">
        </div>

        <div class="uk-margin">
            <label class="uk-form-label" for="form-stacked-select">Telephone number</label>
            <input class="uk-input" type="text" name="TelephoneNumber">
        </div>

        <div class="uk-margin">
            <label class="uk-form-label" for="form-stacked-select">Address</label>
            <input class="uk-input" type="text" name="Address">
        </div>

        <a class="uk-link-muted" asp-action="Index">Go back</a>

        <input type="submit" value="Add" class="uk-button uk-button-default"></input>
    </fieldset>
</form>